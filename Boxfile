db1:
  name: l4-skeleton
  type: mysql
  
web1:
  name: l4-skeleton
  shared_writable_dirs:
    - /app/storage/cache
    - /app/storage/logs
    - /app/storage/meta
    - /app/storage/sessions
    - /app/storage/views
    - /public/builds
  document_root: /public
  php_version: 5.4
  php_extensions:
    - mbstring
    - pdo_mysql
    - mcrypt
    - gd
    - curl
    - zip
    - eaccelerator
  before_deploy:
    - "php artisan migrate"
    - "php artisan migrate --package='atticmedia/anvard'"
    - "php artisan basset:build"
  after_deploy:
    - "rm -f app/storage/cache/*"
    - "rm -f app/storage/views/*"
  after_build:
    - "chmod +x deploy.sh"
    - "./deploy.sh"
    
cache1:
  name: sessions
  type: redis